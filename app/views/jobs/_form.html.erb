<%= form_for(@job, remote: true, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @job.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h4>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :project_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :project_id, options_for_select(Project.all.map{|s|[s.name, s.id]}.sort, @job.project_id) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ressource_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :ressource_id, options_for_select(Ressource.all.map{|s|[s.name, s.id]}.sort, @job.ressource_id) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :start_date, 'data-provide' => 'datepicker', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :end_date, 'data-provide' => 'datepicker', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
      <%= link_to 'Delete', @job, remote: true, method: :delete,  data: { confirm: 'Are you sure?' }, :class => "btn btn-danger delete" %>
    </div>
  </div>
<% end %>
