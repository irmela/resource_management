<div class="page-header">
  <h2>Calendar</h2>
  	<ul class="filter-list">
	<% @ressource_departments.map do |dep| %>
    	<li><%= link_to dep, calendar_path({:department => dep}) %></li>
    <% end %>
	<ul>
</div>



<div id="job-form" style="display:none;"></div>

<div id="calendar">
	<%= render_table %>
</div>

<div class="project-list">
	<%= content_tag_for(:div, @projects) do |project| %>
	    <span class="color-icon" style="background-color:<%= project.color %>"></span>
	    <%= project.name %>
	<% end %>
</div>