= form_for(@ressource, :html => { :class => "form-horizontal" }) do |f|
  - if @ressource.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4
        = pluralize(@ressource.errors.count, "error")
        prohibited this ressource from being saved:
      %ul
        - @ressource.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :name, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :name, :class => "form-control"
  .form-group
    = f.label :department, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.select :department, options_for_select({'Dev' => 'dev' , 'Video' => 'vid', 'PM' => 'pm'}.sort, @ressource.department)
  .form-group
    = f.label :color, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :color, :class => "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => "btn btn-primary"
