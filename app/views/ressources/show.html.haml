.page-header
  = link_to ressources_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_ressource_path(@ressource), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show ressource
%dl.dl-horizontal
  %dt Name:
  %dd= @ressource.name
  %dt Department:
  %dd= @ressource.department
  %dt Color:
  %dd
    %span.color-icon{:style => "background-color:#{@ressource.color}"}
    = @ressource.color
